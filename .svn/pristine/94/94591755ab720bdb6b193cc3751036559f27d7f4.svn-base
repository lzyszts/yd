{{include file='public/head' /}}
<style type="text/css">
	.layui-form-checkbox{
		margin-bottom: 10px;
	}
</style>
<body class="childrenBody">
<form class="layui-form" style="width:80%;">
	<div class="layui-form-item layui-row layui-col-xs12">
		<label class="layui-form-label">帐号</label>
		<div class="layui-input-block">
			<input type="text" class="layui-input userName" name="username" lay-verify="required|username" placeholder="请输入登录名">
		</div>
	</div>
	<div class="layui-form-item layui-row layui-col-xs12">
		<label class="layui-form-label">密码</label>
		<div class="layui-input-block">
			<input type="password" class="layui-input" name="login_pwd"  id="pwd" lay-verify="required|password" placeholder="请输入密码">
		</div>
	</div>	
	<div class="layui-form-item layui-row layui-col-xs12">
		<label class="layui-form-label">确认密码</label>
		<div class="layui-input-block">
			<input type="password" class="layui-input"  lay-verify="repwd" id="repwd" placeholder="请确认输入密码">
		</div>
	</div>	
	<div class="layui-form-item layui-row layui-col-xs12">
		<label class="layui-form-label">邮箱</label>
		<div class="layui-input-block">
			<input type="text" class="layui-input userEmail" name="email" placeholder="请输入邮箱">
		</div>
	</div>
	<div class="layui-row">
		<div class="magb15 layui-col-xs12">
			<label class="layui-form-label">所属角色</label>
			<div class="layui-input-block">
				{{foreach name='role_info' item='v'}}
				<input type="checkbox" name="role_ids[]" value="{{:$v['id']}}" lay-skin="primary" title="{{:$v['name']}}">
				{{/foreach}}
			</div>
		</div>
	</div>
	<!-- <div class="layui-form-item layui-row layui-col-xs12">
		<label class="layui-form-label">管理员描述</label>
		<div class="layui-input-block">
			<textarea placeholder="请输入描述内容" name="admin_des" class="layui-textarea userDesc"></textarea>
		</div>
	</div> -->
	<div class="layui-form-item layui-row layui-col-xs12">
		<div class="layui-input-block">
			<button type="button"class="layui-btn layui-btn-sm" lay-submit lay-filter="admin-adminadd-sub">立即添加</button>
			<button type="reset" class="layui-btn layui-btn-sm layui-btn-primary">重置</button>
		</div>
	</div>
</form>
{{include file='public/foot' /}}
<script type="text/javascript">
layui.config({
		base : '{{:__MY__STATIC__}}/admin/js/extend/'
	}).use(['formSub'],function(){
	var formSub = layui.formSub;
	//提交
	formSub.sub({
		subBtnName:'admin-adminadd-sub',
	});
})


</script>
</body>
</html>