{{include file='public/head' /}}
<style type="text/css">
	.layui-form-checkbox{
		margin-bottom: 10px;
	}
</style>
<body class="childrenBody">
<form class="layui-form" style="width:80%;">
	<div class="layui-form-item layui-row layui-col-xs12">
		<label class="layui-form-label">帐号</label>
		<div class="layui-input-block">
			<input type="text" class="layui-input" value="{{:$admin_info['username']}}" disabled>
		</div>
	</div>
	<div class="layui-form-item layui-row layui-col-xs12">
		<label class="layui-form-label">修改密码</label>
		<div class="layui-input-block">
			<input type="password" class="layui-input" name="new_pwd"  id="pwd" lay-verify="newPassword">
		</div>
	</div>
	<div class="layui-form-item layui-row layui-col-xs12">
		<label class="layui-form-label">邮箱</label>
		<div class="layui-input-block">
			<input type="text" class="layui-input userEmail" name="email"  placeholder="请输入邮箱" value="{{$admin_info['email']}}">
		</div>
	</div>
	<div class="layui-row">
		<div class="magb15 layui-col-xs12">
			<label class="layui-form-label">所属角色</label>
			<div class="layui-input-block">
				{{foreach name='role_info' item='v'}}
				<input type="checkbox" name="role_ids[]" value="{{:$v['id']}}" lay-skin="primary" title="{{:$v['name']}}" {{php}} if(in_array($v['id'],$admin_info['role_ids_array'])) echo 'checked'; {{/php}}>
				{{/foreach}}
			</div>
		</div>
	</div>
	<div class="layui-form-item layui-row layui-col-xs12">
		<label class="layui-form-label">管理员描述</label>
		<div class="layui-input-block">
			<textarea name="admin_des" class="layui-textarea">{{:$admin_info['admin_des']}}</textarea>
		</div>
	</div>
	<div class="layui-form-item layui-row layui-col-xs12">
		<div class="layui-input-block">
			<button type="button"class="layui-btn layui-btn-sm" lay-submit lay-filter="admin-adminedit-sub">立即添加</button>
			<button type="reset" class="layui-btn layui-btn-sm layui-btn-primary">取消</button>
		</div>
	</div>
	<input type="hidden" name="id" value="{{:$admin_info['id']}}">
</form>
{{include file='public/foot' /}}
<script type="text/javascript">
layui.config({
		base : '{{:__MY__STATIC__}}/admin/js/extend/'
	}).use(['form','formSub'],function(){
	var form=layui.form,
        formSub = layui.formSub;
	//提交
	formSub.sub({
		subBtnName:"admin-adminedit-sub",
		url:"{{url('adminAdd');}}",
		msg:"修改成功"
	});
})


</script>
</body>
</html>