{{include file='public/head' /}}
<style type="text/css">

</style>
<body class="childrenBody">
<form class="layui-form" style="width:80%;" id="editForm">
	<div class="layui-form-item layui-row layui-col-xs12">
		<label class="layui-form-label">权限名</label>
		<div class="layui-input-block">
			<input type="text" id="name" class="layui-input" name="name" lay-verify="required|authname" value="{{:$auth_info['name']}}">
		</div>
	</div>
	<div class="layui-form-item layui-row layui-col-xs12">
		<label class="layui-form-label">模块</label>
		<div class="layui-input-block">
			<input type="text" id="module" class="layui-input" name="module" lay-verify="required" value="{{:$auth_info['module']}}">
		</div>
	</div>
	<div class="layui-form-item layui-row layui-col-xs12">
		<label class="layui-form-label">控制器</label>
		<div class="layui-input-block">
			<input type="text" id="control" class="layui-input" name="control" lay-verify="required" value="{{:$auth_info['control']}}">
		</div>
	</div>
	<div class="layui-form-item layui-row layui-col-xs12">
		<label class="layui-form-label">方法</label>
		<div class="layui-input-block">
			<input type="text" id="action" class="layui-input" name="action" lay-verify="required" value="{{:$auth_info['action']}}">
		</div>
	</div>
	<div class="layui-form-item layui-row layui-col-xs12">
		<label class="layui-form-label">排序</label>
		<div class="layui-input-block">
			<input type="text" id="sort" class="layui-input" name="sort" style="width:100px;" lay-verify="required" value="{{:$auth_info['sort']}}">
		</div>
	</div>
	<div class="layui-form-item layui-row layui-col-xs12">
		<label class="layui-form-label">icon</label>
		<div class="layui-input-block">
			<input type="text" id="icon" class="layui-input" name="icon" lay-verify="" placeholder="填写class名,例如：icon-xiazai" value="{{:$auth_info['icon']}}">
			<span class="layui-word-aux layui-inline" style="margin-top: 5px;">示例：<a href="{{:$Think.__MY__STATIC__.'/common/font/demo_index.html'}}" target="_blank" style="color:#0014ff;">{{:$Think.__MY__STATIC__}}/common/font/demo_index.html</a></span>
		</div>
	</div>
	
	<div class="layui-form-item layui-row layui-col-xs12">
		<label class="layui-form-label">是否显示</label>
		<div class="layui-input-block">
			<input type="checkbox" id="is_show" name="is_show" lay-filter="state" lay-skin="switch" value="{{:$auth_info['is_show']}}" lay-text="显示|隐藏" {{php}} if($auth_info['is_show']==1) echo 'checked'; {{/php}}>
		</div>
	</div>
	<div class="layui-form-item layui-row layui-col-xs12">
		<label class="layui-form-label">打开新页面</label>
		<div class="layui-input-block">
			<input type="checkbox" id="is_new" name="is_new" lay-filter="state" lay-skin="switch" value="{{:$auth_info['is_new']}}" lay-text="是|否" {{php}} if($auth_info['is_new']==1) echo 'checked'; {{/php}}>
		</div>
	</div>
	<input type="hidden" name="id" value="{{:$auth_info['id']}}">
	<div class="layui-form-item layui-row layui-col-xs12">
		<div class="layui-input-block">
			<button type="button"class="layui-btn layui-btn-sm" lay-submit lay-filter="admin-authedit-sub">确认修改</button>
			<button type="reset" class="layui-btn layui-btn-sm layui-btn-primary">取消</button>
		</div>
	</div>
</form>
{{include file='public/foot' /}}
<script type="text/javascript">
layui.config({
		base : '{{:__MY__STATIC__}}/admin/js/extend/'
	}).use(['formSub'],function(){
	var formSub=layui.formSub;
	//编辑确认
	formSub.sub({
		subBtnName:'admin-authedit-sub',
		url:"{{url('authEdit');}}",
		msg:"修改成功",
	});
})
</script>
</body>
</html>